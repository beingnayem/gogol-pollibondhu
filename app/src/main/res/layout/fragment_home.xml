<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="পল্লীবন্ধু"
            android:textColor="@color/polli_green"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivNotif"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:layout_marginEnd="16dp"
            app:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvLogo"
            app:layout_constraintBottom_toBottomOf="@id/tvLogo" />

        <ImageView
            android:id="@+id/ivLanguage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_language"
            android:layout_marginEnd="16dp"
            app:tint="@color/black"
            app:layout_constraintEnd_toStartOf="@id/ivNotif"
            app:layout_constraintTop_toTopOf="@id/ivNotif" />

        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location_on"
            android:layout_marginEnd="16dp"
            app:tint="@color/gray_text"
            app:layout_constraintEnd_toStartOf="@id/ivLanguage"
            app:layout_constraintTop_toTopOf="@id/ivNotif" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardHero"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvLogo">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_gallery"
                android:background="#DDDDDD"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="পল্লীবন্ধু তে স্বাগতম"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="গ্রামীণ সম্প্রদায়ের জন্য ডিজিটাল সেবা, কৃষি সহায়তা এবং নাগরিক অংশগ্রহণের প্ল্যাটফর্ম"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvServicesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="প্রধান সেবাসমূহ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardHero"/>

        <TextView
            android:id="@+id/tvServicesSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আপনার প্রয়োজনীয় সেবা নির্বাচন করুন"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvServicesTitle"/>

        <GridLayout
            android:id="@+id/gridServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            app:layout_constraintTop_toBottomOf="@id/tvServicesSubtitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>