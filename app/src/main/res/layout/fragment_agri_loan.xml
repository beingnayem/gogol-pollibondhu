<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_keyboard_arrow_down"
                android:rotation="90"
                app:tint="@color/black"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="কৃষি ঋণ ক্যালকুলেটর"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ঋণের পরিমাণ (টাকা)"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="সুদের হার (%) - সাধারণ ৪%"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="মেয়াদ (মাস)"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="16dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="হিসাব করুন"
            android:backgroundTint="@color/polli_green"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/btnApplyLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ঋণের জন্য আবেদন করুন"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="32dp"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>