<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="পল্লীবন্ধু"
            android:textColor="@color/polli_green"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivNotif"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:layout_marginEnd="16dp"
            app:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvLogo"
            app:layout_constraintBottom_toBottomOf="@id/tvLogo" />

        <ImageView
            android:id="@+id/ivLanguage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_language"
            android:layout_marginEnd="16dp"
            app:tint="@color/black"
            app:layout_constraintEnd_toStartOf="@id/ivNotif"
            app:layout_constraintTop_toTopOf="@id/ivNotif" />

        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location_on"
            android:layout_marginEnd="16dp"
            app:tint="@color/gray_text"
            app:layout_constraintEnd_toStartOf="@id/ivLanguage"
            app:layout_constraintTop_toTopOf="@id/ivNotif" />

        <LinearLayout
            android:id="@+id/layoutBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvLogo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ডিজিটাল সরকারি সেবা"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="সরকারি এবং কমিউনিটি সেবা সহজেই অ্যাক্সেস করুন। আবেদন করুন, স্ট্যাটাস চেক করুন এবং গুরুত্বপূর্ণ নথি পান।"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_service"
                android:layout_gravity="center"
                app:tint="@null"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardVerified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F9F9F9"
            app:strokeColor="#EEEEEE"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/layoutBanner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_verified"
                        app:tint="@color/polli_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="সরকার যাচাইকৃত সেবা"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সকল সেবা সরকারি কর্তৃপক্ষ দ্বারা যাচাইকৃত এবং নিরাপদ"
                    android:textSize="12sp"
                    android:textColor="@color/gray_text"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সেবা বিভাগসমূহ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardVerified"/>

        <LinearLayout
            android:id="@+id/layoutCategoryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>